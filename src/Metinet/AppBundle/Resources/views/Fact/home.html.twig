{% extends "::base.html.twig" %}

{% block title %}MetinetAppBundle:Fact:home{% endblock %}

{% block body %}
<h1>All of Facts</h1>

<ol>

    {% for fact in facts %}

        <li>{{ fact.number }} : {{ fact.summary }}</li>

    {% endfor %}

</ol>

<a href="{{ path('random') }}">Random Fact</a><br />
<a href="{{ path('submit') }}">Submit Fact</a>
{% endblock %}
